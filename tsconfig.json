{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "./app/_assets/*"
      ],
      "@components/*": [
        "./app/_components/*"
      ],
      "@lib/*": [
        "./app/_lib/*"
      ],
      "@styles/*": [
        "./app/_styles/*"
      ],
      "@sections/*": [
        "./app/(root)/sections/*"
      ],
      "@tests/*": [
        "./tests/*"
      ],
      "userInterface": [
        "./app/_lib/types/userInterface"
      ],
      "toast": [
        "./app/_lib/types/toast"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    ".next/dev/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
